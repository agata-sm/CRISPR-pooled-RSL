profiles {

    standard {
        process.executor = 'local'
    }

    cluster {
		process.executor = 'slurm' 
		process.scratch = true

		process {
   			withLabel: big_mem {
       			cpus = 8
        		memory = 50.GB
        		queue = 2.h
    		}
    		withLabel: mid_mem {
        		cpus = 4
        		queue = 1.h
    		}
    		withLabel: small {
        		cpus = 1
        		queue = 1.h
    		}

		}

    }

    singularity {
        process.executor = 'slurm'
        process.container = 'cbcrg/imagex' //// NNNN
        docker.enabled = false
        singularity.enabled = true

    }

}
